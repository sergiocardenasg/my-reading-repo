<style>
.topright {
    position: absolute;
    top: 8px;
    right: 16px;
    font-size: 18px;
    text-align: right;
}

#books td, #books th {
  border: 1px solid #ddd;
  padding: 8px;
  text-align:center;
  width: 200px;
}

#books tr:nth-child(even){
    background-color: #39459b;
}

#books tr:hover {
    background-color: #ddd;
}

#books th {
  padding-top: 8px;
  padding-bottom: 8px;
  text-align: center;
  background-color: #4CAF50;
  color: white;
}

table.center {
  margin-left: auto; 
  margin-right: auto;
  width: auto;
}

a {
  color: white;
}
</style>

<div class="topright">
    <a href="/books"> Homepage </a>
</div>


    <table id="books" class="center">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
        </tr>
        <%@list.each_with_index do |book, index|%>
            <tr>
                <%indexplusone = index + 1%>
                <td> <%=indexplusone%>. </td> 
                <td> <a href='/books/<%=book.id%>'> <%=book.title%></a> </td> 
                <td> <%=book.author%> </span> </td> 
                <td> <%=book.genre%> </span> </td> 
            </tr>
        <%end%>
    </table>
